<div class="alt-content-wrap {{ block.orientation }}">
{% for item in block.sections %}
    
    <section class="section alt-content">
        <div class="wrap flex f-wrap">
            <div class="content">
                {{ item.copy | markdown }}
            </div>
            <div class="image-container">
                <img {% if item.circular %}class="circular"{% endif %} 
                    src="{{ item.image }}" 
                    alt="{{ item.alt_text }}">
            </div>
        </div>
    </section>
{% endfor %}
</div>