{% # TO DO: Fix overlay and text so that they look good on light and dark mode. %}
<section class="hero overlay">
    <img class="hero-img" eleventy:widths="320, 768, 1024, 1280, 1920" height="500" src="{{ block.hero_image }}" alt="{{ block.alt_text }}">
    <div class="content centered">
        <h1>{{ block.heading }}<h1>
        {% if block.subheading %}
            {{ block.subheading | markdown }}
        {% endif %}
    </div>
</section>